
<form action="" method="post">


    <div class="w3-content w3-margin-top" style="max-width:1400px;">


        <!-- The Grid -->
        <div class="w3-row-padding">

            <!-- Left Column -->
            <div class="w3-third">

                <div class="w3-white w3-text-grey w3-card-4">
                    <div class="w3-display-container" style="text-align:center">
                        <input type="hidden" name="imgSource" id="imgSource">
                        <img src="~/images/upload.png" style="width:20%;" name="imageContainer" id="imageContainer" alt="Avatar">
                        <input type="file" class="form-control col-xs-2" name="imageSrc" id="imageSrc" onchange="previewFile()"><br>
                    </div><br>
                    <div class="w3-container w3-card w3-white w3-margin-bottom">
                        <br>
                        <p><i class="fa fa-address-card fa-fw w3-margin-right w3-large w3-text-teal"></i> Personal Information<br><br><input type="text" class="form-control col-xs-2" name="fName" placeholder="Company Name"><br><br></p>
                        @*<p><input type="text" class="form-control col-xs-2" name="lName" placeholder="Last Name"><br><br></p>*@
                        <p>

                            <select type="text" class="form-control col-xs-2" name="specialization" placeholder="Specialization">
                                <option>Account Type</option>
                                <option>Vendor</option>
                                <option>Distributor</option>
                            </select>
                            <br><br>
                        </p>
                        <hr>






                        <br>
                    </div>
                </div>
                <br>

                <!-- End Left Column -->
            </div>

            <!-- Right Column -->
            <div class="w3-twothird">
                <div class="w3-container w3-card w3-white w3-margin-bottom">
                    <h2 class="w3-text-grey w3-padding-16"><i class="fa fa-certificate fa-fw w3-margin-right w3-xxlarge w3-text-teal"></i>Credentials</h2>
                    <br />
                    <div class="w3-container">
                        <p><input type="email" class="form-control col-xs-2" name="email" placeholder="Email"><br><br></p>
                        <p><input type="password" class="form-control col-xs-2" name="password" placeholder="password"><br><br></p>
                        <p><input type="password" class="form-control col-xs-2" name="password" placeholder="Re-password"><br><br></p>
                        <hr>

                        <label for="files" class="form-control col-xs-2">Upload Files for Verification</label>
                        <select type="text" class="form-control col-xs-2" name="skill3" placeholder="Specialization">
                            <option value=""> Active </option>
                            <option value=""> Inactive </option>
                        </select>
                        <input type="file" id="files" class="hidden" /> <br><br><br><br>
                    </div>

                </div>

                <!-- The Modal -->
                <div id="myModal" class="modal">

                    <!-- Modal content -->
                    <div class="modal-content">
                        <span class="close">&times;</span>
                        <p>
                            <div id="googleMap" class="" style="position:static!important;height: 100%;width: 100%" ; text-align: center; ">

                            </div>
                        </p>
                    </div>

                </div>

                <div class="w3-container w3-card w3-white w3-margin-bottom">
                    <h2 class="w3-text-grey w3-padding-16"><i class="fa fa-certificate fa-fw w3-margin-right w3-xxlarge w3-text-teal"></i>Factory Location</h2><br />
                    <div class="w3-container">
                        @{
                            for (int ctr = 0; ctr < 3; ctr++)
                            {
                                <h6 class="w3-text-teal"><b><input type="button" class="form-control col-xs-2 mapBtn" value="Factory Location" onclick="showMap()"></b><br><br></h6>

                                <br>
                                <input type="text" class="form-control col-sm-5" name="timeFrom" placeholder="Factory Opening Time"><p class="col-sm-2" style="text-align: center; font-weight: bolder;"> - </p>
                                <input typ e="text" class="form-control col-sm-5" name="timeTo" placeholder="Factory Closing Time"><br><br>


                                <div class="w3-container">
                                    <div class="w3-col m2 w3-center col-sm-2"> <input type="checkbox" class="col-xs-2" name=""> Mon</div>
                                    <div class="w3-col m2 w3-center col-sm-2"><input type="checkbox" class="col-xs-2" name=""> Tues</div>
                                    <div class="w3-col m3 w3-center col-sm-3"><input type="checkbox" class="col-xs-2" name=""> Wed</div>
                                    <div class="w3-col m2 w3-center col-sm-2"><input type="checkbox" class="col-xs-2" name=""> Thurs</div>
                                    <div class="w3-col m2 w3-center col-sm-3"><input type="checkbox" class="col-xs-2" name=""> Fri</div>

                                </div>
                                <br>
                                <p><input type="text" class="form-control col-xs-2" name="schoolOneSpecialization" placeholder="Factory Contact Number"></p>
                                <br>
                                <hr>
                            }
                        }




                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Save Information</button>
                </div>

            </div>
        </div>
    </div>
    <br><br>

</form>