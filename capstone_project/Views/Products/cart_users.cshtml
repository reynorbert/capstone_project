
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_userLayout.cshtml";
}

<div class="w3-content" style="">
    <!-- The Grid -->
    <div class="w3-row-padding">

        <div class="row w3-container" style="border-bottom:solid; border-bottom-color:#808080">
            <div class="col-sm-12">
                <p class="" style="height: 8vh; font-size: 5vh; text-align: left; font-family:'Courier New'"> My Cart</p>
            </div>
        </div>

        <div class="row w3-container">
            <div class="col-sm-12" style="">
                <p class="" style="font-size: 3vh; text-align: left; font-family:'Courier New'; color:black; margin-top:2vh">
                    <button type="button" class="form-control col-xs-2" style="background-color:forestgreen; color:aliceblue; font-size: 2vh; text-align: center; font-family:'Courier New'" onclick="payment()"> Buy Now </button>
                </p>
            </div>
            <div class="col-sm-12" style="border:solid; border-color:dimgray; margin-top:2vh;" onclick="answer('1')">
                <div class="col-sm-12">
                    <div class="col-sm-10">
                        <p class="" style="height: 13vh; font-size: 3vh; text-align: left; font-family:'Courier New'; margin-top:3vh">
                            Name: Rock Miniral <br /> Pieces: 10 <br />
                        </p>
                    </div>
                    <div class="col-sm-2" style="height: 8vh; font-size: 4vh; text-align: right; font-family:'Courier New'; margin-top:2vh; font-weight:bolder">
                        +
                    </div>
                </div>
                <div class="col-sm-12" style="margin-bottom:2vh">
                    <p class="" style="font-size: 3vh; text-align: left; font-family:'Courier New'; color:black; margin-bottom:2vh">
                        <button type="button" class="form-control col-xs-2" style="background-color:red; color:aliceblue; font-size: 2vh; text-align: center; font-family:'Courier New'" ;> Remove From Cart </button>
                    </p>
                </div>
            </div>
            <div id="1" class="col-sm-12" style="border:solid; border-color:dimgray; margin-top:2vh; display:none;  background:dimgray;">
                <p class="" style="font-size: 3vh; text-align: left; font-family:'Courier New'; margin-top:3vh; margin-bottom:3vh; color:white">
                    Name: Rock Miniral <br /> Pieces: 10 <br /> Price per piece: 100 <br /> Total Price: 1000
                </p>
            </div>
            <div class="col-sm-12" style="border:solid; border-color:dimgray; margin-top:2vh;" onclick="answer('2')">
                <div class="col-sm-12">
                    <div class="col-sm-10">
                        <p class="" style="height: 13vh; font-size: 3vh; text-align: left; font-family:'Courier New'; margin-top:3vh">
                            Name: Steel <br /> Pieces: 10 <br />
                        </p>
                    </div>
                    <div class="col-sm-2" style="height: 8vh; font-size: 4vh; text-align: right; font-family:'Courier New'; margin-top:2vh; font-weight:bolder">
                        +
                    </div>
                </div>
                <div class="col-sm-12" style="margin-bottom:2vh">
                    <p class="" style="font-size: 3vh; text-align: left; font-family:'Courier New'; color:black; margin-bottom:2vh">
                        <button type="button" class="form-control col-xs-2" style="background-color:red; color:aliceblue; font-size: 2vh; text-align: center; font-family:'Courier New'" ;> Remove From Cart </button>
                    </p>
                </div>
            </div>
            <div id="2" class="col-sm-12" style="border:solid; border-color:dimgray; margin-top:2vh; display:none;  background:dimgray;">
                <p class="" style="font-size: 3vh; text-align: left; font-family:'Courier New'; margin-top:3vh; margin-bottom:3vh; color:white">
                    Name: Steel <br /> Pieces: 10 <br /> Price per piece: 100 <br /> Total Price: 1000
                </p>
            </div>

        </div>
    </div>
</div>

<script>
    function answer(id) {
        if (document.getElementById(id).style.display == "none") {
            $("#" + id).css("display", "block");
        } else {
            $("#" + id).css("display", "none");
        }
    }

    function payment() {
        window.location = "/products/payment_users";
    }

</script>

