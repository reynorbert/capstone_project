

<div class="w3-main">
    <form action="." method="get">
        <header id="portfolio">


            <!-- Overlay effect when opening sidebar on small screens -->
            <div class="w3-overlay w3-hide-large w3-animate-opacity" onclick="w3_close()" style="cursor:pointer" title="close side menu" id="myOverlay"></div>
            <div class="w3-container">
                <h1 style="text-align: center; font-style: italic;"><marquee> <b>Products on the market</b> </marquee></h1>
            </div>
        </header>
    </form>
    <br />
    
    @{
        for (int rowCtr = 0; rowCtr < 2; rowCtr++)
        {
            <div style="margin-bottom:5vh" class="row">
                    @for (int colCtr = 0; colCtr < 4; colCtr++)
                    {
                    <div class="col-xs-3" >
                        <div  style="font-style: italic;">
                            <div class="card" style="width:15vw; margin-left:3vw">
                                <img class="card-img-top" src="~/images/upload.png" style="height:20vh; width:7vw; margin-left:25%" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title">Rock</h5>
                                    <p class="card-text"> Rock or stone is a natural substance, a solid aggregate of one or more minerals or mineraloids.... </p>
                                    <a href="/products/details"><button type="button" class="form-control col-xs-12" style="font-size:2vh;background-color:cornflowerblue;width:100%; color:aliceblue"> View </button></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }

</div>
