

@model IEnumerable<capstone_project.Models.tbl_cart>
@{
    Layout = "~/Views/Shared/_LayoutPageDistributor.cshtml";
}


<div class="w3-content" style="">
    <!-- The Grid -->
    <div class="w3-row-padding">

        <div class="row w3-container" style="border-bottom:solid; border-bottom-color:#808080">
            <div class="col-sm-12">
                <p class="" style="height: 8vh; font-size: 3vh; text-align: left; font-family:'Courier New'; color:black"> My Cart</p>
            </div>
        </div>

        <div class="row w3-container">
            <div class="col-sm-12" style=" margin-top:2vh;">
                <div class="col-sm-8" style="margin-top:2vh; border:solid; border-color:dimgray;">
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-12">
                            <div class="col-sm-2" style="font-size: 4vh; text-align: right; font-family:'Courier New'; margin-top:2vh; font-weight:bolder">
                                <img src="~/images/products/@Html.DisplayFor(modelItem => item.product_id)/@Html.DisplayFor(modelItem => item.tbl_products.prod_img)" style="height:20vh; width:100%; min-height:20vh" alt="Avatar">
                            </div>
                            <div class="col-sm-10">
                                <p class="" style="height: 8vh; font-size: 2vh; text-align: left; font-family:'Courier New'; margin-top:3vh; color:black">
                                    <b style="font-weight:600">Name:</b> @item.tbl_products.product_name<br /> <b style="font-weight:600">Price:</b> @item.tbl_products.product_price <br /><b style="font-weight:600"> Description:</b>  @item.tbl_products.product_desc.Substring(0, 150) ... <br />
                                    <b style="font-weight:600">Seller:</b> @item.tbl_products.tbl_accounts.tbl_personalInformations.Where(x => x.account_id == item.tbl_products.tbl_accounts.account_id).FirstOrDefault().personal_lastName,  @item.tbl_products.tbl_accounts.tbl_personalInformations.Where(x => x.account_id == item.tbl_products.tbl_accounts.account_id).FirstOrDefault().personal_firstName
                                </p>

                            </div>

                        </div>
                        <div class="col-sm-12" style="margin-bottom:2vh; border-bottom:solid; border-color:dimgray;">
                            <p class="" style="font-size: 3vh; text-align: left; font-family:'Courier New'; color:black; margin-bottom:2vh; ">
                                <br />
                                <button type="button" class="form-control col-xs-2" style="background-color:red; color:aliceblue; font-size: 2vh; text-align: center; font-family:'Courier New'" onclick="remove(@item.cart_id)"> Remove From Cart </button>
                            </p>
                            <br /> <br />
                        </div>


                    }
                </div>
                <div class="col-sm-1" style="">


                </div>
                <div class="col-sm-3" style="margin-bottom:2vh; border:solid; border-color:dimgray; margin-top:2vh">
                    <div class="col-sm-12" style="margin-bottom:2vh; border-bottom:solid; border-color:dimgray; height:10vh">
                        <p class="" style="font-size: 3vh; text-align: left; font-family:'Courier New'; color:black; margin-bottom:2vh; margin-top:2vh">
                            <button type="button" class="form-control col-xs-2" style="background-color:#f0c14b; color:#000000; font-size: 2vh; text-align: center; font-family:'Courier New'" onclick="checkout()"> Procede to checkout </button>
                        </p>
                    </div>
                    <div class="col-sm-12" style="margin-bottom:2vh; border-bottom:solid; border-color:dimgray">
                        <p class="" style="font-size: 2.3vh; text-align: left; font-family:'Courier New'; color:black; margin-bottom:2vh; margin-top:2vh;font-weight:900">
                            Order Summary
                        </p>
                        <p class="" style="font-size: 2.3vh; text-align: left; font-family:'Courier New'; color:black; margin-bottom:2vh; margin-top:2vh;">
                            Item Price:  @ViewBag.sum
                        </p>
                        <p class="" style="font-size: 2.3vh; text-align: left; font-family:'Courier New'; color:black; margin-bottom:2vh; margin-top:2vh;">
                            Shipping and Handling: 500
                        </p>

                    </div>
                    <div class="col-sm-12" style="margin-bottom:2vh">
                        <p class="" style="font-size: 2.3vh; text-align: left; font-family:'Courier New'; color:black; margin-bottom:2vh; margin-top:2vh;font-weight:900; color:#ff0000; ">
                            Order Total: @ViewBag.sumTax
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script>

        function checkout() {
            window.location = "/Distributor/check_out";
        }

        function remove(id) {

            var cart = id;


            $.ajax({
                method: "POST",
                url: "@Url.Action("remove_cart", "User")",
                data: { cart: cart },
                success: function (result) {
                    alert("Item Removed");
                    location.reload();
                },
                failed: function (result) {
                    console.log("Failed");
                },
            });
        }
    </script>
