    <title>Mineral World Depot</title>
    @{ 
        try
        {


            if(Session["Account_type"].ToString() != "3")
            {
                if (Session["Account_type"].ToString() == "0")
                {
                    Response.Redirect("~/Admin");
                }
                else if (Session["Account_type"].ToString() == "1")
                {
                    Response.Redirect("~/Distributor");
                }
                else if (Session["Account_type"].ToString() == "2")
                {
                    Response.Redirect("~/Vendor");
                }
                else
                {
                    Response.Redirect("~/");
                }

            }
        }
        catch
        {
            Response.Redirect("~/");
        }

    }
</head>

