@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_userLayout.cshtml";
}
@model IEnumerable<capstone_project.Models.tbl_accounts>
<form action="send_new" method="post">

    <div class="w3-content" style="">
        <!-- The Grid -->
        <div class="w3-row-padding">

            <div class="row w3-container" style="border-bottom:solid; border-bottom-color:#808080">
                <div class="col-sm-12">
                    <p class="" style="height: 8vh; font-size: 5vh; text-align: left; font-family:'Courier New';color:black"> New Inquiry Page</p>
                </div>
            </div>

            <div class="row w3-container" style="margin-top:2%">
                <div class="col-sm-12">
             
                    <div class="col-sm-12">
                        <div class="col-sm-12" style="margin-bottom:2vh;  border-bottom:solid; border-bottom-color:gray">
                      
                            <div class="col-sm-12" style="margin-bottom:2vh">
                                <input type="text" class="form-control col-xs-2" placeholder="Title" id="title" name="title" style="font-size:2.3vh; color:black">
                            </div>
                            <div class="col-sm-12" style="margin-bottom:2vh">
                                @*<p><input type="text" class="form-control" placeholder="Destination" id="Destination"></p>*@
                                <select type="text" id="account_dest" name="account_dest" class="form-control" style="height:5.5vh; font-size:2.3vh">
                                    <option> Account Destination </option>
                                    @foreach (var item in Model)
                                    {
                                        if (@item.account_id == 1)
                                        {
                                            <option value="@item.account_id"> Admin </option>
                                        }
                                        else
                                        {
                                            <option value="@item.account_id"> @item.tbl_personalInformations.Where(x => x.account_id == item.account_id).FirstOrDefault().personal_firstName  @item.tbl_personalInformations.Where(x => x.account_id == item.account_id).FirstOrDefault().personal_lastName</option>
                                        }

                                    }
                                </select>
                            </div>
                            <div class="col-sm-12" style="margin-bottom:2vh">
                                <p><textarea class="form-control" placeholder="Message" name="message" id="message" style="height:18vh;font-size:2.3vh; color:black"></textarea></p>
                            </div>

                        </div>
                        <div class="col-sm-12" style=" margin-top: 1vh" id="register_div">
                            <button type="submit" class="form-control col-xs-12" style="font-size:2vh;background-color:cornflowerblue;width:100%; color:aliceblue;" onclick="send()"> Send Item  </button>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>

</form>
